{
  "frame": "TaskModal",
  "controls": [
    { "testid": "task-modal", "action": "noop" },
    { "testid": "close-modal", "action": "modal.close" },
    { "testid": "task-title", "action": "task.edit_title", "field": "title" },
    { "testid": "progress", "action": "noop" },

    { "testid": "add-task-btn", "action": "task.add_root" },
    { "pattern": "add-child-${taskId}", "action": "subtask.add", "params": ["taskId"] },
    { "pattern": "subtask-input-${taskId}", "action": "subtask.input", "params": ["taskId"], "field": "title" },

    { "testid": "add-data-btn", "action": "assets.add.open" },
    { "testid": "asset-actions", "action": "noop" },
    { "testid": "add-file", "action": "assets.add.file", "field": "assetType", "value": "file" },
    { "testid": "add-link", "action": "assets.add.link", "field": "assetType", "value": "link" },
    { "testid": "add-folder", "action": "assets.add.folder", "field": "assetType", "value": "folder" },
    { "testid": "add-email", "action": "assets.add.email", "field": "assetType", "value": "email" },
    { "testid": "asset-row", "action": "noop" },
    { "testid": "open-in-outlook", "action": "email.open_in_outlook", "params": ["assetId"] },

    { "testid": "due-date", "action": "details.due.open" },
    { "testid": "sync-calendar", "action": "calendar.sync" },
    { "testid": "owner", "action": "owner.open" },
    { "testid": "assignee", "action": "assignee.open" },
    { "testid": "tags", "action": "tags.add.open" },

    { "testid": "comments", "action": "noop" },
    { "testid": "comment-input", "action": "comment.input", "field": "text" },
    { "testid": "post-comment-btn", "action": "comment.create" },
    { "pattern": "reply-comment-${commentId}", "action": "comment.reply", "params": ["commentId"] },
    { "pattern": "resolve-comment-${commentId}", "action": "comment.resolve", "params": ["commentId"] },
    { "pattern": "like-comment-${commentId}", "action": "comment.like", "params": ["commentId"] },
    { "pattern": "post-reply-${commentId}", "action": "comment.reply.post", "params": ["commentId"] },
    { "pattern": "reply-to-reply-${replyId}", "action": "reply.reply", "params": ["replyId"] },
    { "pattern": "resolve-reply-${replyId}", "action": "reply.resolve", "params": ["replyId"] },
    { "pattern": "like-reply-${replyId}", "action": "reply.like", "params": ["replyId"] },
    { "pattern": "post-nested-reply-${replyId}", "action": "reply.post", "params": ["replyId"] },
    { "pattern": "resolve-nested-reply-${replyId}", "action": "nreply.resolve", "params": ["replyId"] },
    { "pattern": "like-nested-reply-${replyId}", "action": "nreply.like", "params": ["replyId"] },

    { "pattern": "set-priority-${taskId}", "action": "priority.open", "params": ["taskId"] },
    { "pattern": "set-assignee-${taskId}", "action": "assignee.open", "params": ["taskId"] },
    { "pattern": "set-due-date-${taskId}", "action": "due.open", "params": ["taskId"] }
  ],
  "notes": [
    "Add menu-item testids for priority.set (values: high|medium|low).",
    "Add menu-item testids for assignee.set with user IDs.",
    "Add confirm testid for due.set with ISO8601 value handling.",
    "For owner/tags in Details, add selection/confirm testids if not already present."
  ]
}

