{
  "": "https://json-schema.org/draft/2020-12/schema",
  "": "https://eislaw.local/schemas/secrets.schema.json",
  "title": "EISLAW Central Secrets",
  "type": "object",
  "properties": {
    "fillout": { "type": "object", "properties": { "api_key": {"type": "string"} }, "required": ["api_key"] },
    "airtable": {
      "type": "object",
      "properties": {
        "token": {"type": "string"},
        "token_alt": {"type": "string"},
        "base_id": {"type": "string"},
        "table_id": {"type": "string"},
        "view": {"type": "string"},
        "clients_table": {"type": "string"},
        "contacts_table": {"type": "string"},
        "view_clients": {"type": "string"},
        "view_contacts": {"type": "string"},
        "view_privacy": {"type": "string"}
      },
      "required": ["token","base_id","table_id"]
    },
    "microsoft_graph": {
      "type": "object",
      "properties": {
        "client_id": {"type": "string"},
        "client_secret": {"type": "string"},
        "tenant_id": {"type": "string"}
      },
      "required": ["client_id","client_secret","tenant_id"]
    },
    "facebook_marketing": {
      "type": "object",
      "properties": {
        "access_token": {"type": "string"},
        "ad_account_id": {"type": "string"}
      },
      "required": ["access_token","ad_account_id"]
    },
    "instagram": {
      "type": "object",
      "properties": {
        "page_id": {"type": "string"},
        "page_access_token": {"type": "string"},
        "user_id": {"type": "string"},
        "username": {"type": "string"},
        "access_token": {"type": "string"}
      }
    },
    "facebook_user": {
      "type": "object",
      "properties": {
        "access_token": {"type": "string"}
      },
      "required": ["access_token"]
    },
    "facebook_page": {
      "type": "object",
      "properties": {
        "page_id": {"type": "string"},
        "access_token": {"type": "string"}
      },
      "required": ["page_id","access_token"]
    },
    "instagram_app": {
      "type": "object",
      "properties": {
        "app_id": {"type": "string"},
        "app_secret": {"type": "string"},
        "app_name": {"type": "string"}
      },
      "required": ["app_id","app_secret"]
    },
    "azure_blob": {
      "type": "object",
      "properties": {
        "connection_string": {"type": "string"},
        "container": {"type": "string"},
        "container_sas": {"type": "string"}
      }
    },
    "sharepoint": {
      "type": "object",
      "properties": {
        "hostname": {"type": "string", "default": "eislaw.sharepoint.com"},
        "site_path": {"type": "string", "default": "sites/EISLAWTEAM"},
        "library": {"type": "string", "default": "Shared Documents"},
        "clients_root": {"type": "string", "default": "לקוחות משרד"},
        "registry_path": {"type": "string", "default": "System/registry.json"}
      }
    },
    "llm": {
      "type": "object",
      "properties": {
        "provider": {"type": "string", "enum": ["gemini","openai","anthropic"]},
        "api_keys": {
          "type": "object",
          "properties": {
            "gemini": {"type": "string"},
            "openai": {"type": "string"},
            "anthropic": {"type": "string"}
          }
        }
      }
    }
  },
  "additionalProperties": true
}
